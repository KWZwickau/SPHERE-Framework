<h4>Rechtestruktur
    <small>Rollen</small>
</h4>
<table id="TableAccountRoleList" class="table table-bordered table-condensed small">
    <thead>
    <tr>
        <th style="width: 1%; white-space: nowrap;">Id</th>
        <th style="width: 15%; white-space: nowrap;">Rollen</th>
        <th>Zusammensetzung</th>
    </tr>
    </thead>
    <tbody>
    {% for iRole, oRole in AccountRoleList %}
        <tr>
            <td>{{ oRole.Role.Id }}</td>
            <td>{{ oRole.Role.Name }}</td>
            <td>
                <table class="table table-bordered table-condensed" style="margin: auto;">
                    <thead>
                    <tr>
                        <th style="width: 1%; white-space: nowrap;font-size: 5px; padding: 1px;">Id</th>
                        <th style="width: 25%;font-size: 5px; padding: 1px;">Zugriffslevel</th>
                        <th style="font-size: 5px; padding: 1px;">Zusammensetzung</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for iLevel, oLevel in oRole.LevelList %}
                        <tr>
                            <td>{{ oLevel.Level.Id }}</td>
                            <td>{{ oLevel.Level.Name }}</td>
                            <td>
                                <table class="table table-bordered table-condensed" style="margin: auto;">
                                    <thead>
                                    <tr>
                                        <th style="width: 1%; white-space: nowrap;font-size: 5px; padding: 1px;">Id</th>
                                        <th style="width: 40%;font-size: 5px; padding: 1px;">Privilegien</th>
                                        <th style="font-size: 5px; padding: 1px;">Zusammensetzung</th>
                                    </tr>
                                    </thead>
                                    <tbody>
                                    {% for iPrivilege, oPrivilege in oLevel.PrivilegeList %}
                                        <tr>
                                            <td>{{ oPrivilege.Privilege.Id }}</td>
                                            <td>{{ oPrivilege.Privilege.Name }}</td>
                                            <td>
                                                <table class="table table-bordered table-condensed"
                                                       style="margin: auto;">
                                                    <thead>
                                                    <tr>
{#                                                        <th style="width: 1%; white-space: nowrap;">Id</th>#}
{#                                                        <th style="width: 99%;">Rechte</th>#}
                                                        <th style="font-size: 5px; padding: 1px;">Rechte</th>
                                                    </tr>
                                                    </thead>
                                                    <tbody>
                                                    {% for iRight, oRight in oPrivilege.RightList %}
                                                        <tr>
{#                                                            <td>{{ oRight.Id }}</td>#}
                                                            <td style="font-size: 5px; padding: 0px 5px;">{{ oRight.Route }}</td>
                                                        </tr>
                                                    {% endfor %}
                                                    </tbody>
                                                </table>
                                            </td>
                                        </tr>
                                    {% endfor %}
                                    </tbody>
                                </table>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>


<script>
    //noinspection JSUnresolvedFunction
    executeScript(function()
    {
        Client.Use('ModTable', function()
        {
            jQuery('#TableAccountRoleList').ModTable();
        });
    });
</script>
